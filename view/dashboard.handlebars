{{#if posts.length}}
<section>
    <h2>Your Account</h2>
    <ol>
        {{#each posts as |post|}}
            <ul>
                <article class="post">

                    <div class="title">
                        <a href="/post{{id}}">{{title}}</a>
                    </div>

                </article>
                <a href="/dashboard/edit/{{post.id}}">Edit Post</a>
            </ul>
        {{/each}}
    </ol>
</section>
{{/if}}

<div>
    <button type="submit"><a href="/dashboard/newpost">Create a New Post</a></button>
</div>